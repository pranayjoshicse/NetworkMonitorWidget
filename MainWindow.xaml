<Window x:Class="NetworkMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="Network Monitor"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        Topmost="True"
        MinWidth="100"
        MinHeight="60"
        Width="160"
        Height="100"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        SizeChanged="Window_SizeChanged"
        LocationChanged="Window_LocationChanged">

    <Window.Resources>
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
        </Storyboard>
    </Window.Resources>

    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Settings" Click="Settings_Click">
                <MenuItem.Icon>
                    <TextBlock Text="âš™" FontSize="14"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Always on Top" x:Name="AlwaysOnTopMenuItem" IsCheckable="True" 
                      Checked="AlwaysOnTop_Changed" Unchecked="AlwaysOnTop_Changed"/>
            <MenuItem Header="Layout">
                <MenuItem Header="Vertical" x:Name="VerticalLayoutMenuItem" IsCheckable="True" 
                          Checked="Layout_Changed"/>
                <MenuItem Header="Horizontal" x:Name="HorizontalLayoutMenuItem" IsCheckable="True" 
                          Checked="Layout_Changed"/>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Minimize to Tray" Click="MinimizeToTray_Click">
                <MenuItem.Icon>
                    <TextBlock Text="ðŸ—•" FontSize="14"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Exit" Click="Exit_Click">
                <MenuItem.Icon>
                    <TextBlock Text="âœ•" FontSize="14"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </Window.ContextMenu>

    <Grid>
        <!-- Main Border with rounded corners -->
        <Border x:Name="MainBorder" 
                CornerRadius="8" 
                Background="#CC1E1E1E"
                BorderBrush="#333333"
                BorderThickness="1">
            <Grid Margin="4,2">
                <!-- Vertical Layout -->
                <Viewbox x:Name="VerticalPanel" 
                         Stretch="Uniform"
                         StretchDirection="Both"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical">
                        <!-- Download -->
                        <StackPanel Orientation="Horizontal" Margin="0,1">
                            <TextBlock x:Name="DownloadIcon" 
                                       Text="â†“" 
                                       FontWeight="Bold"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="0,0,3,0"/>
                            <TextBlock x:Name="DownloadSpeedText" 
                                       Text="0.00 Kbps"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <!-- Upload -->
                        <StackPanel Orientation="Horizontal" Margin="0,1">
                            <TextBlock x:Name="UploadIcon" 
                                       Text="â†‘" 
                                       FontWeight="Bold"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="0,0,3,0"/>
                            <TextBlock x:Name="UploadSpeedText" 
                                       Text="0.00 Kbps"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Viewbox>

                <!-- Horizontal Layout (Hidden by default) -->
                <Viewbox x:Name="HorizontalPanel" 
                         Stretch="Uniform"
                         StretchDirection="Both"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <!-- Download -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,8,0">
                            <TextBlock x:Name="DownloadIconH" 
                                       Text="â†“" 
                                       FontWeight="Bold"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="0,0,2,0"/>
                            <TextBlock x:Name="DownloadSpeedTextH" 
                                       Text="0.00 Kbps"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <!-- Upload -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="UploadIconH" 
                                       Text="â†‘" 
                                       FontWeight="Bold"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="0,0,2,0"/>
                            <TextBlock x:Name="UploadSpeedTextH" 
                                       Text="0.00 Kbps"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Viewbox>

                <!-- Resize Grip Visual -->
                <Path Data="M 0,8 L 8,0 M 4,8 L 8,4 M 8,8 L 8,8"
                      Stroke="#555555"
                      StrokeThickness="1"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Bottom"
                      Margin="0,0,2,2"
                      Opacity="0.5"/>
            </Grid>
        </Border>

        <!-- System Tray Icon -->
        <tb:TaskbarIcon x:Name="TrayIcon"
                        ToolTipText="Network Monitor"
                        TrayMouseDoubleClick="TrayIcon_TrayMouseDoubleClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Show" Click="TrayShow_Click"/>
                    <MenuItem Header="Settings" Click="Settings_Click"/>
                    <Separator/>
                    <MenuItem Header="Exit" Click="Exit_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
