<Window x:Class="NetworkMonitor.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - Network Monitor"
        Width="450"
        Height="580"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="Padding" Value="8,5"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        <Style TargetType="Slider">
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="⚙ Settings" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Display Section -->
                <TextBlock Text="Display" FontSize="16" FontWeight="SemiBold" 
                           Foreground="#00D4AA" Margin="0,0,0,10"/>
                
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Speed Unit:"/>
                    <ComboBox x:Name="SpeedUnitCombo" Grid.Column="1" 
                              SelectionChanged="SpeedUnitCombo_SelectionChanged">
                        <ComboBoxItem Content="bps (bits/second)"/>
                        <ComboBoxItem Content="Kbps (kilobits/second)"/>
                        <ComboBoxItem Content="Mbps (megabits/second)"/>
                        <ComboBoxItem Content="Gbps (gigabits/second)"/>
                        <ComboBoxItem Content="B/s (bytes/second)"/>
                        <ComboBoxItem Content="KB/s (kilobytes/second)"/>
                        <ComboBoxItem Content="MB/s (megabytes/second)"/>
                        <ComboBoxItem Content="GB/s (gigabytes/second)"/>
                    </ComboBox>
                </Grid>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Layout:"/>
                    <ComboBox x:Name="LayoutCombo" Grid.Column="1"
                              SelectionChanged="LayoutCombo_SelectionChanged">
                        <ComboBoxItem Content="Vertical"/>
                        <ComboBoxItem Content="Horizontal"/>
                    </ComboBox>
                </Grid>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Background:"/>
                    <ComboBox x:Name="BackgroundStyleCombo" Grid.Column="1"
                              SelectionChanged="BackgroundStyleCombo_SelectionChanged">
                        <ComboBoxItem Content="Blur (Acrylic)"/>
                        <ComboBoxItem Content="Solid"/>
                        <ComboBoxItem Content="Transparent"/>
                    </ComboBox>
                </Grid>

                <Grid Margin="0,10,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Opacity:"/>
                    <Slider x:Name="OpacitySlider" Grid.Column="1" 
                            Minimum="0.3" Maximum="1" 
                            TickFrequency="0.1" IsSnapToTickEnabled="True"
                            ValueChanged="OpacitySlider_ValueChanged"/>
                    <TextBlock x:Name="OpacityValue" Grid.Column="2" 
                               Text="90%" HorizontalAlignment="Right"/>
                </Grid>

                <Separator Margin="0,15" Background="#3E3E42"/>

                <!-- Colors Section -->
                <TextBlock Text="Colors" FontSize="16" FontWeight="SemiBold" 
                           Foreground="#00D4AA" Margin="0,0,0,10"/>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Color Preset:"/>
                    <ComboBox x:Name="ColorPresetCombo" Grid.Column="1"
                              SelectionChanged="ColorPresetCombo_SelectionChanged"/>
                </Grid>

                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="Download Color:" Margin="0,0,0,5"/>
                        <Border x:Name="DownloadColorPreview" 
                                Height="30" CornerRadius="5" 
                                Background="#00D4AA" 
                                Cursor="Hand"
                                MouseLeftButtonDown="DownloadColorPreview_Click">
                            <TextBlock x:Name="DownloadColorText" 
                                       Text="#00D4AA" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Upload Color:" Margin="0,0,0,5"/>
                        <Border x:Name="UploadColorPreview" 
                                Height="30" CornerRadius="5" 
                                Background="#FF6B6B"
                                Cursor="Hand"
                                MouseLeftButtonDown="UploadColorPreview_Click">
                            <TextBlock x:Name="UploadColorText" 
                                       Text="#FF6B6B" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <Separator Margin="0,15" Background="#3E3E42"/>

                <!-- Behavior Section -->
                <TextBlock Text="Behavior" FontSize="16" FontWeight="SemiBold" 
                           Foreground="#00D4AA" Margin="0,0,0,10"/>

                <CheckBox x:Name="AlwaysOnTopCheck" Content="Always on top"
                          Checked="AlwaysOnTopCheck_Changed" Unchecked="AlwaysOnTopCheck_Changed"/>
                
                <CheckBox x:Name="MinimizeToTrayCheck" Content="Minimize to system tray"
                          Checked="MinimizeToTrayCheck_Changed" Unchecked="MinimizeToTrayCheck_Changed"/>

                <CheckBox x:Name="StartMinimizedCheck" Content="Start minimized"
                          Checked="StartMinimizedCheck_Changed" Unchecked="StartMinimizedCheck_Changed"/>

                <CheckBox x:Name="StartWithWindowsCheck" Content="Start with Windows"
                          Checked="StartWithWindowsCheck_Changed" Unchecked="StartWithWindowsCheck_Changed"/>

                <Grid Margin="0,10,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Refresh Rate:"/>
                    <Slider x:Name="RefreshRateSlider" Grid.Column="1" 
                            Minimum="500" Maximum="5000" 
                            TickFrequency="500" IsSnapToTickEnabled="True"
                            ValueChanged="RefreshRateSlider_ValueChanged"/>
                    <TextBlock x:Name="RefreshRateValue" Grid.Column="2" 
                               Text="1000ms" HorizontalAlignment="Right"/>
                </Grid>

                <Separator Margin="0,15" Background="#3E3E42"/>

                <!-- About Section -->
                <TextBlock Text="About" FontSize="16" FontWeight="SemiBold" 
                           Foreground="#00D4AA" Margin="0,0,0,10"/>

                <StackPanel Background="#252526" Margin="0,5">
                    <Border CornerRadius="8" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Network Monitor" FontSize="18" FontWeight="Bold"/>
                            <TextBlock Text="Version 1.0.0" Foreground="#888888" Margin="0,5,0,0"/>
                            <TextBlock Text="A lightweight network speed monitor widget for Windows." 
                                       TextWrapping="Wrap" Margin="0,10,0,0" Foreground="#CCCCCC"/>
                            <TextBlock Text="© 2026 Pranay Joshi (https://github.com/pranayjoshicse)" Foreground="#666666" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Reset to Defaults" 
                    Style="{StaticResource ModernButtonStyle}"
                    Click="ResetDefaults_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Close" 
                    Style="{StaticResource ModernButtonStyle}"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
